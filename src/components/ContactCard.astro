---
interface Props {
  icon: string;
  label: string;
  value: string;
  href?: string;
  primary?: boolean;
}

const { icon, label, value, href, primary = false } = Astro.props;

const iconSvgs: Record<string, string> = {
  phone: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>',
  email: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>',
  location: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>',
  clock: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>',
  calendar: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>',
};

const baseClasses = 'group relative overflow-hidden rounded-2xl p-8 transition-all duration-300 hover:scale-105 shadow-lg';
const bgClasses = primary
  ? 'bg-gradient-to-br from-white to-gray-50 border-2 border-primary-300 hover:border-primary-500 hover:shadow-2xl'
  : 'bg-white border-2 border-gray-200 hover:border-primary-300 hover:shadow-xl';
---

<a
  href={href || '#'}
  class={`${baseClasses} ${bgClasses} ${!href && 'pointer-events-none'}`}
>
  <div class="flex flex-col items-center text-center space-y-4">
    <div class={`p-4 rounded-2xl ${primary ? 'bg-primary-600 shadow-lg shadow-primary-600/30' : 'bg-primary-100 group-hover:bg-primary-200'} transition-colors`}>
      <svg
        class={`w-10 h-10 ${primary ? 'text-white' : 'text-primary-600'}`}
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        set:html={iconSvgs[icon] || iconSvgs.phone}
      />
    </div>
    <div>
      <p class={`text-sm font-semibold mb-2 uppercase tracking-wide ${primary ? 'text-primary-700' : 'text-gray-500'}`}>
        {label}
      </p>
      <p class={`text-xl font-bold ${primary ? 'text-primary-600' : 'text-gray-900'}`}>
        {value}
      </p>
    </div>
  </div>
</a>
