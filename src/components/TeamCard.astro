---
interface Props {
  name: string;
  role: string;
  image: string;
  bio: string;
  specialties?: string[];
}

const { name, role, image, bio, specialties = [] } = Astro.props;
---

<div class="group bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border-2 border-gray-100 hover:border-primary-200">
  <div class="aspect-square overflow-hidden bg-gradient-to-br from-gray-100 to-gray-200 relative">
    <img
      src={image}
      alt={name}
      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
  </div>
  <div class="p-8">
    <h3 class="text-2xl font-bold text-gray-900 mb-2 group-hover:text-primary-600 transition">{name}</h3>
    <p class="text-primary-600 font-semibold mb-4 text-lg">{role}</p>
    <p class="text-base text-gray-600 leading-relaxed mb-5">{bio}</p>
    {
      specialties.length > 0 && (
        <div class="flex flex-wrap gap-2">
          {specialties.map((specialty) => (
            <span class="px-4 py-2 bg-gradient-to-r from-primary-100 to-primary-50 text-primary-700 text-sm font-semibold rounded-full border border-primary-200">
              {specialty}
            </span>
          ))}
        </div>
      )
    }
  </div>
</div>
