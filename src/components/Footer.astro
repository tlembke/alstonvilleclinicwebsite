---
import { readFileSync } from 'fs';
import * as yaml from 'js-yaml';

const clinicInfoRaw = readFileSync('src/data/clinic-info.yaml', 'utf8');
const clinicInfo = yaml.load(clinicInfoRaw) as any;
---

<footer class="bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-gray-300 relative overflow-hidden">
  <!-- Decorative Elements -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-primary-600/5 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 left-0 w-96 h-96 bg-blue-600/5 rounded-full blur-3xl"></div>

  <div class="container-custom py-16 relative z-10">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
      <!-- Clinic Info -->
      <div>
        <div class="flex items-center space-x-2 mb-6">
          <div class="p-2 bg-primary-600 rounded-lg">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
          </div>
          <h3 class="text-white text-2xl font-bold">{clinicInfo.name}</h3>
        </div>
        <p class="text-gray-400 mb-3 flex items-start">
          <svg class="w-5 h-5 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
          </svg>
          {clinicInfo.address}
        </p>
        <p class="text-gray-400 mb-2 flex items-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          <a href={`tel:${clinicInfo.phone.replace(/\s/g, '')}`} class="hover:text-white transition">{clinicInfo.phone}</a>
        </p>
        <p class="text-gray-400 flex items-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          <a href={`mailto:${clinicInfo.email}`} class="hover:text-white transition">{clinicInfo.email}</a>
        </p>
      </div>

      <!-- Hours -->
      <div>
        <h3 class="text-white text-2xl font-bold mb-6">Opening Hours</h3>
        {clinicInfo.hours.map((hour: any) => (
          <div class="mb-3 flex justify-between">
            <span class="font-semibold text-white">{hour.day}</span>
            <span class="text-gray-400">{hour.time}</span>
          </div>
        ))}
      </div>

      <!-- Philosophy -->
      <div>
        <h3 class="text-white text-2xl font-bold mb-6">{clinicInfo.tagline}</h3>
        <p class="text-gray-400 leading-relaxed mb-6">
          We are committed to providing accessible, person-centered, comprehensive, coordinated care
          with the highest standards of quality and safety.
        </p>
        <a href="#home" class="inline-flex items-center text-primary-400 hover:text-primary-300 font-semibold transition">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7"></path>
          </svg>
          Back to Top
        </a>
      </div>
    </div>

    <div class="border-t border-gray-800 mt-8 pt-8 text-center text-sm">
      <p>&copy; {new Date().getFullYear()} {clinicInfo.name}. All rights reserved.</p>
      <p class="mt-2">
        <a href="/privacy" class="hover:text-white transition">Privacy Policy</a>
      </p>
    </div>
  </div>
</footer>
